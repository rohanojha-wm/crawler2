{
  "name": "url-monitor",
  "version": "1.0.0",
  "description": "A TypeScript application that monitors URLs periodically, stores results, and displays graphs",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "start:headless": "node dist/main-headless.js",
    "dev": "nodemon --exec ts-node src/main.ts",
    "dev:headless": "nodemon --exec ts-node src/main-headless.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean",
    "deploy:build": "npm run build && npm run start:headless",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "url-monitoring",
    "typescript",
    "dashboard",
    "http-requests",
    "performance-monitoring"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
